<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

 <EditText
     android:paddingVertical="12dp"
     android:background="@drawable/back_edit"
     android:id="@+id/email"
     android:paddingStart="15dp"
     android:drawableLeft="@drawable/email"
     android:layout_marginHorizontal="44dp"
     android:layout_marginBottom="52dp"
     app:layout_constraintBottom_toBottomOf="@id/lines"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>

 <EditText
     android:paddingVertical="12dp"
     android:background="@drawable/back_edit"
     android:id="@+id/lines"
     android:paddingStart="15dp"
     android:drawableLeft="@drawable/lines"
     android:layout_marginHorizontal="44dp"
     android:layout_marginBottom="52dp"
     app:layout_constraintBottom_toBottomOf="@id/msg"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>

 <EditText
     android:paddingVertical="12dp"
     android:background="@drawable/no_corners"
     android:id="@+id/msg"
     android:paddingStart="15dp"
     android:drawableStart="@drawable/icon_message"
     android:layout_marginHorizontal="44dp"
     android:layout_marginBottom="100dp"
     app:layout_constraintBottom_toBottomOf="@id/btn_send"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>

 
 <Button
     android:layout_marginBottom="150dp"
     android:layout_marginTop="20dp"
     android:id="@+id/btn_down"
     android:layout_marginHorizontal="52dp"
     android:background="@color/violet"
     android:text="NEXT"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
  />

 <Button
     android:id="@+id/btn_send"
     android:layout_marginBottom="150dp"
     app:layout_constraintBottom_toBottomOf="@id/btn_down"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginHorizontal="52dp"
     android:background="@color/violet"
     android:text="SEND"/>



</androidx.constraintlayout.widget.ConstraintLayout>